        <Button x:Name="SaveButton" Content="Save" HorizontalAlignment="Left" Margin="185,213,0,0" VerticalAlignment="Top" Width="98" Height="35" Click="button_Click"/>
        <Button x:Name="LoadButton" Content="Load" HorizontalAlignment="Left" Margin="18,213,0,0" VerticalAlignment="Top" Width="91" Height="35" Click="button_Click_1"/>

    </Grid>
</Window>
